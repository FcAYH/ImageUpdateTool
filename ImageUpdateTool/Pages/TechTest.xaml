<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="ImageUpdateTool.Pages.TechTest"
             Title="TechTest">
    <Grid x:Name="grid" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="cloneButton" Grid.Row="0" Text="Click me!" Clicked="Button_Clicked"/>
        <ProgressBar x:Name="progressBar" IsVisible="False" Grid.Row="1" VerticalOptions="End"  Progress="0.5"/>
    </Grid>
</ContentPage>