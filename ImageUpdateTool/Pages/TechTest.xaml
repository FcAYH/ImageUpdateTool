<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="ImageUpdateTool.Pages.TechTest"
             Title="TechTest">
    <ScrollView Margin="0, 0, 5, 0">
        <material:TreeView x:Name="FolderTree" Spacing="5" Padding="5" HorizontalOptions="Fill">
            <material:TreeView.ItemTemplate>
                <DataTemplate>
                    <Button 
                            Padding="10, 0"
                            HeightRequest="25" HorizontalOptions="Fill" 
                            CornerRadius="5"
                            />
                </DataTemplate>
            </material:TreeView.ItemTemplate>
        </material:TreeView>
    </ScrollView>
</ContentPage>