<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="ImageUpdateTool.Views.ImageArea">
    <VerticalStackLayout HeightRequest="150" WidthRequest="200">
        <ImageButton x:Name="Image"  HeightRequest="120" Margin="5"
                     Clicked="Image_Clicked" Aspect="Fill"
                     HorizontalOptions="Center" VerticalOptions="Center"/>
        <HorizontalStackLayout Spacing="20">
            <Button x:Name="ImageSizeButton" Padding="5,0,5,0" HeightRequest="25"
                    CornerRadius="5" StyleClass="ElevatedButton"/>
            <Button x:Name="CopyURLButton" Text="Copy URL" Clicked="CopyURLButton_Clicked" Padding="5,0,5,0" HeightRequest="25"
                    CornerRadius="5" StyleClass="OutlinedButton" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
